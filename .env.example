# VLM API Configuration
# Copy this file to .env and fill in your credentials

# GLM-4.6V API (Zhipu AI)
GLM_API_KEY=$Z_AI_API_KEY
GLM_API_BASE=https://open.bigmodel.cn/api/paas/v4

# Alternative: OpenAI API (or compatible providers)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_API_BASE=https://api.openai.com/v1

# Model Settings
VLM_DEFAULT_MODEL=glm-4v-plus  # GLM-4.6V model identifier
VLM_MAX_TOKENS=8000
VLM_TEMPERATURE=0.1

# Retry Settings
VLM_MAX_RETRIES=3
VLM_RETRY_DELAY=1.0
